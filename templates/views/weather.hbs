<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    <!-- Heading -->
    {{>navbar}}
    <!-- main body -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="search_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="Submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInfo">
                    <div class="top_layer">
                        <p id ="day">Monday</p>
                        <p id="date">19 AUG</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_location">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_degree">0</span> <sup>o</sup> C</p>
                            <P id="temp_status"><i class="fa-solid fa-cloud" aria-hidden="true"></i></P>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
     {{>footer}}

     <script src="js/main.js"></script>
     
</body>

</html>