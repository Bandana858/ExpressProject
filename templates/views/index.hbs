<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>

<body>
    <!-- Heading -->
    {{>navbar}}
    <!-- main body -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to Weather Express</p>
                        <h1>Get The Latest <span class="body_span">Weather</span> Info Of Your City</h1>
                        <button class="button">Click Me</button>
                    </div>
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExample" class="carousel slide">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img src="images/spring.jpg" class=" w-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="images/calender.jpg" class="w-100" alt="...">
                              </div>
                              <div class="carousel-item">
                                <img src="images/rain.jpg" class="w-100" alt="...">
                              </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="visually-hidden">Next</span>
                            </button>
                          </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
     {{>footer}}
     
</body>

</html>